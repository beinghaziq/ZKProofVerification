pragma circom 2.0.0;

template BookPurchase() {
    signal input userId;      // User's ID
    signal input bookId;      // Book's ID
    signal input purchased;    // 1 if purchased, 0 otherwise
    signal output isValid;     // The output signal to be verified

    // Constraint to ensure the purchase is valid if the bookId is provided
    isValid <== purchased * bookId;
}

component main = BookPurchase();